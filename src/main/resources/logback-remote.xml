<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
    <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldNames><message>[ignore]</message></fieldNames>
            <provider class="net.logstash.logback.composite.loggingevent.LoggingEventPatternJsonProvider">
                <pattern>{ "message": "%X - %m" }</pattern>
            </provider>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="stdout_json" />
    </root>

    <logger name="no.nav.ehandel.kanal" level="DEBUG"/>
    <logger name="no.nav.common.juridisklogg.client.RestArchiver" level="INFO" />
    <logger name="no.nav.ehandel.kanal.camel.routes.AccessPoint" level="INFO"/>
    <logger name="no.nav.ehandel.kanal.camel.routes.AccessPointKt" level="INFO"/>

</configuration>
